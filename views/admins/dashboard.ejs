<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('../cdn_link.ejs')%>
    <style>
        body{
            background-image: linear-gradient(#B33E8F,#324AB2);

        }
    </style>
</head>
<body>
    <div class="p-5 container-fluid" id="div_main">
       <a href="/admin/add_data"><button class="btn btn-light"> Add Card Data</button></a> 

       <table class="table table-hover table-striped my-3 table-bordered">
         <thead>
            <tr class="text-center">
                <th>Sr No</th>
                <th>Id</th>
                <th>Card Title</th>
                <th>Card Caption</th>
                <th>Card Image</th>
                <th></th>
                <th></th>
            </tr>
         </thead>
         <tbody>
            <% for(let i=0;i<data.length;i++){ %>
                <tr class="text-center">
                    <td><%= i+1%></td>
                    <td><%= data[i].card_id%></td>
                    <td><%= data[i].card_title%></td>
                    <td><%= data[i].card_caption%></td>
                    <!-- <td><%= data[i].card_img%></td> -->
                     <td><img src="/uploads/<%= data[i].card_img %>" height="100px" width="70%" /></td>

                     <td>
                        <a href="/admin/edit_card/<%= data[i].card_id%>" >
                            <i class="fa fa-edit text-success fw-bold" onclick="return confirm('Are you sure ? ')"></i>
                        </a>
                     </td>
                     <td>
                        <a href="/admin/delete_card/<%= data[i].card_id%>" >
                            <i class="fa fa-trash text-danger fw-bold" onclick="return confirm('Are you sure ? ')"></i>
                        </a>
                     </td>
                </tr>
                <% } %>
         </tbody>
       </table>
    </div>
</body>
</html>